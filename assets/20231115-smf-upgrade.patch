+	 */
+	public function escape_wildcard_string($string, $translate_human_wildcards=false)
+	{
+		$replacements = array(
+			'%' => '\%',
+			'_' => '\_',
+			'\\' => '\\\\',
+		);
+
+		if ($translate_human_wildcards)
