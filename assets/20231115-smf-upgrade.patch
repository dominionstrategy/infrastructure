+	/**
+	 * insert
+	 *
+	 * @param string $method - options 'replace', 'ignore', 'insert'
+	 * @param $table
+	 * @param $columns
+	 * @param $data
+	 * @param $keys
+	 * @param bool $disable_trans = false
+	 * @param object $connection = null
