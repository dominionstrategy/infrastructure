+function AnnouncementsNotify()
+{
+	global $scripturl, $txt, $board, $user_info, $context, $smcFunc;
+
+	if (isset($_REQUEST['u']) && isset($_REQUEST['token']))
+	{
+		$member_info = getMemberWithToken('announcements');
